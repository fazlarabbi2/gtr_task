@* @model List<Infras.Employee> *@

<h2>Employees List</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>DepartmentId</th>
            <th>DesignationId</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.DepartmentId</td>
                <td>@employee.DesignationId</td>
                <td>@employee.Email</td>
            </tr>
        }
    </tbody>
</table>
